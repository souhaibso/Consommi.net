@model IEnumerable<Solution.Domain.Entities.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">

    @if (Model == null)
    {
        <h1> there is no product to sell </h1>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="product-item">
                    <div class="pi-pic">

                        @{
                            var base64 = Convert.ToBase64String(item.imageByte);
                            var img = string.Format("data:image/gif;base64,{0}", base64);

                        }
                        <img src="@img"  width="210" height="257">
                        <div class="icon">
                            <i class="icon_heart_alt"></i>
                        </div>
                        <ul>
                            <li class="quick-view"><a href="@Url.Action("DisplaySelectedProduct", "Product", new { id = item.id })">+ Quick View</a></li>
                        </ul>
                    </div>
                    <div class="pi-text">
                        <div class="catagory-name">@Html.DisplayFor(modelItem => item.Categorie)</div>
                        <a href="#">
                            <h5>@Html.DisplayFor(modelItem => item.nom)</h5>
                        </a>
                        <div class="product-price">
                            @Html.DisplayFor(modelItem => item.prix)$
                        </div>
                    </div>
                </div>
            </div>

        }
    }
</div>

